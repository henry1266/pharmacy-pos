{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    /* React 專用設定 */
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "moduleResolution": "node",
    "jsx": "react-jsx",
    
    /* 輸出設定 - React 開發模式 */
    "noEmit": true,
    
    /* 路徑解析 - 針對 frontend */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./components/*"],
      "@pages/*": ["./pages/*"],
      "@services/*": ["./services/*"],
      "@utils/*": ["./utils/*"],
      "@types/*": ["./types/*"],
      "@redux/*": ["./redux/*"],
      "@accounting3/*": ["./modules/accounting3/*"]
    },

    /* 程式碼品質與附加檢查 */
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  

  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ],
  "references": [
    { "path": "../shared" }
  ]
}