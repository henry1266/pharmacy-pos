{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    /* React 專用設定 */
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    
    /* 輸出設定 - React 開發模式 */
    "noEmit": true,
    
    /* 路徑解析 - 針對 frontend */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./components/*"],
      "@pages/*": ["./pages/*"],
      "@services/*": ["./services/*"],
      "@utils/*": ["./utils/*"],
      "@types/*": ["./types/*"],
      "@redux/*": ["./redux/*"],
      "@accounting2/*": ["./modules/accounting2/*"],
      "@accounting2/components/*": ["./modules/accounting2/components/*"],
      "@accounting2/pages/*": ["./modules/accounting2/pages/*"],
      "@accounting2/features/*": ["./modules/accounting2/features/*"],
      "@accounting2/ui/*": ["./modules/accounting2/components/ui/*"],
      "@accounting2/core/*": ["./modules/accounting2/core/*"],
      "@accounting2/types/*": ["./modules/accounting2/types/*"],
      "@accounting2/utils/*": ["./modules/accounting2/utils/*"],
      "@accounting3/*": ["./modules/accounting3/*"],
      "@accounting3/components/*": ["./modules/accounting3/components/*"],
      "@accounting3/features/*": ["./modules/accounting3/features/*"],
      "@accounting3/core/*": ["./modules/accounting3/core/*"],
      "@accounting3/types/*": ["./modules/accounting3/types/*"]
    },
    
    /* React 開發設定 */
    "allowJs": true,
    "allowSyntheticDefaultImports": true,

    
    /* 保持寬鬆以利轉型 */
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "useUnknownInCatchVariables": false,
    "noImplicitThis": false,
    "strictBindCallApply": false,
    "strictFunctionTypes": true,
    "exactOptionalPropertyTypes": false,
    "strictPropertyInitialization": false,
    "noUncheckedIndexedAccess": true,

    /* 程式碼品質與附加檢查 */
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
  },
  

  
  
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ],
  "references": [
    { "path": "../shared" }
  ]
}