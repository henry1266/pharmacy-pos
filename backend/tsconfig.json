{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    /* Node.js 後端專用設定 */
    "module": "CommonJS",
    
    /* 輸出設定 */
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./",
    
    /* Node.js 環境設定 */
    "allowJs": true,

    /* 路徑解析 - 後端需要訪問 shared */
    "baseUrl": "../",
    "paths": {
      "@shared/*": ["./shared/*"],
      "@shared": ["./shared"],
      "@pharmacy-pos/shared/*": ["./shared/*"],
      "@pharmacy-pos/shared": ["./shared/index.ts"]
    },

    /* 裝飾器支援 (如使用 TypeORM 等) */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.js"
, "scripts/coverage-analysis.js"  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "./models/**/*.js",
    "test/test_mongo_connection.ts"
  ],
  "types": ["jest", "node"],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "references": [
    {
      "path": "../shared"
    }
  ]
}