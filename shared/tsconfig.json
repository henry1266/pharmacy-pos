{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    /* 共享模組特定設定 */
    "outDir": "./dist",
    "rootDir": "./",
    "composite": true,
    "noEmit": false,

    /* 共享模組不需要模組隔離 - 允許類型重新導出 */
    "isolatedModules": false,

    /* 裝飾器支援 */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}