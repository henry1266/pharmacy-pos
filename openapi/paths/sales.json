{
  "/api/sales": {
    "get": {
      "summary": "獲取所有銷售記錄",
      "description": "獲取所有銷售記錄，支援多種過濾和搜尋選項",
      "tags": ["Sales"],
      "parameters": [
        {
          "in": "query",
          "name": "search",
          "schema": {
            "type": "string"
          },
          "description": "搜尋關鍵字（銷貨單號、客戶名稱、產品名稱等）"
        },
        {
          "in": "query",
          "name": "wildcardSearch",
          "schema": {
            "type": "string"
          },
          "description": "萬用字元搜尋（支援 * 和 ? 萬用字元）"
        },
        {
          "in": "query",
          "name": "startDate",
          "schema": {
            "type": "string",
            "format": "date"
          },
          "description": "開始日期"
        },
        {
          "in": "query",
          "name": "endDate",
          "schema": {
            "type": "string",
            "format": "date"
          },
          "description": "結束日期"
        },
        {
          "in": "query",
          "name": "customer",
          "schema": {
            "$ref": "../components/schemas/sales.json#/EntityReference"
          },
          "description": "Customer identifier."
        },
        {
          "in": "query",
          "name": "customerId",
          "schema": {
            "$ref": "../components/schemas/sales.json#/EntityReference"
          },
          "description": "客戶ID"
        },
        {
          "in": "query",
          "name": "paymentMethod",
          "schema": {
            "$ref": "../components/schemas/sales.json#/PaymentMethod"
          }
        },
        {
          "in": "query",
          "name": "paymentStatus",
          "schema": {
            "$ref": "../components/schemas/sales.json#/PaymentStatus"
          }
        },
        {
          "in": "query",
          "name": "status",
          "schema": {
            "$ref": "../components/schemas/sales.json#/SaleLifecycleStatus"
          },
          "description": "Lifecycle status of the sale."
        },
        {
          "in": "query",
          "name": "minAmount",
          "schema": {
            "type": "number",
            "minimum": 0
          },
          "description": "Minimum total amount filter."
        },
        {
          "in": "query",
          "name": "maxAmount",
          "schema": {
            "type": "number",
            "minimum": 0
          },
          "description": "付款狀態"
        },
        {
          "in": "query",
          "name": "page",
          "schema": {
            "type": "integer",
            "minimum": 1
          }
        },
        {
          "in": "query",
          "name": "limit",
          "schema": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100
          }
        },
        {
          "in": "query",
          "name": "sortBy",
          "schema": {
            "type": "string"
          },
          "description": "Field used for sorting."
        },
        {
          "in": "query",
          "name": "sortOrder",
          "schema": {
            "type": "string",
            "enum": ["asc", "desc"]
          },
          "description": "Sort direction."
        }
      ],
      "responses": {
        "200": {
          "description": "成功獲取銷售記錄列表",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../components/schemas/sales.json#/SaleListResponse"
              }
            }
          }
        },
        "400": {
          "description": "Invalid query parameters.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../components/schemas/common.json#/ErrorResponse"
              }
            }
          }
        },
        "500": {
          "description": "伺服器錯誤",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../components/schemas/common.json#/ErrorResponse"
              }
            }
          }
        }
      }
    },
    "post": {
      "summary": "創建銷售記錄",
      "description": "創建一個新的銷售記錄",
      "tags": ["Sales"],
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../components/schemas/sales.json#/SaleCreateRequest"
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "銷售記錄創建成功",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../components/schemas/sales.json#/SaleResponse"
              }
            }
          }
        },
        "400": {
          "description": "請求參數錯誤",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../components/schemas/common.json#/ErrorResponse"
              }
            }
          }
        },
        "404": {
          "description": "找不到相關資源",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../components/schemas/common.json#/ErrorResponse"
              }
            }
          }
        }
      }
    }
  },
  "/api/sales/today": {
    "get": {
      "summary": "Today's sales",
      "description": "Fetch sales created on the current day.",
      "tags": ["Sales"],
      "responses": {
        "200": {
          "description": "List of today's sales.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../components/schemas/sales.json#/SaleListResponse"
              }
            }
          }
        },
        "500": {
          "description": "伺服器錯誤",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../components/schemas/common.json#/ErrorResponse"
              }
            }
          }
        }
      }
    }
  },
  "/api/sales/{id}": {
    "get": {
      "summary": "獲取單個銷售記錄",
      "description": "根據ID獲取單個銷售記錄的詳細信息",
      "tags": ["Sales"],
      "parameters": [
        {
          "in": "path",
          "name": "id",
          "required": true,
          "schema": {
            "$ref": "../components/schemas/sales.json#/EntityReference"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "成功獲取銷售記錄",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../components/schemas/sales.json#/SaleResponse"
              }
            }
          }
        },
        "404": {
          "description": "找不到銷售記錄",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../components/schemas/common.json#/ErrorResponse"
              }
            }
          }
        },
        "500": {
          "description": "伺服器錯誤",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../components/schemas/common.json#/ErrorResponse"
              }
            }
          }
        }
      }
    },
    "put": {
      "summary": "更新銷售記錄",
      "description": "根據ID更新銷售記錄",
      "tags": ["Sales"],
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "parameters": [
        {
          "in": "path",
          "name": "id",
          "required": true,
          "schema": {
            "$ref": "../components/schemas/sales.json#/EntityReference"
          }
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../components/schemas/sales.json#/SaleUpdateRequest"
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "銷售記錄更新成功",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../components/schemas/sales.json#/SaleResponse"
              }
            }
          }
        },
        "400": {
          "description": "請求參數錯誤",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../components/schemas/common.json#/ErrorResponse"
              }
            }
          }
        },
        "404": {
          "description": "找不到銷售記錄",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../components/schemas/common.json#/ErrorResponse"
              }
            }
          }
        },
        "500": {
          "description": "伺服器錯誤",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../components/schemas/common.json#/ErrorResponse"
              }
            }
          }
        }
      }
    },
    "delete": {
      "summary": "刪除銷售記錄",
      "description": "根據ID刪除銷售記錄",
      "tags": ["Sales"],
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "parameters": [
        {
          "in": "path",
          "name": "id",
          "required": true,
          "schema": {
            "$ref": "../components/schemas/sales.json#/EntityReference"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "銷售記錄刪除成功",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../components/schemas/sales.json#/SaleDeleteResponse"
              }
            }
          }
        },
        "404": {
          "description": "找不到銷售記錄",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../components/schemas/common.json#/ErrorResponse"
              }
            }
          }
        },
        "500": {
          "description": "伺服器錯誤",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../components/schemas/common.json#/ErrorResponse"
              }
            }
          }
        }
      }
    }
  }
}